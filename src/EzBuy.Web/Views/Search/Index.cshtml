@{
    ViewData["Title"] = "Search menu - EzBuy";
}

<div class="pi-content">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <h1 class="text-white">Search</h1>
            </div>
            <div class="col-md-5">
                <div class="search-wrapper">
                    <div class="search-box">
                        <input class="search-input" type="text" placeholder="Search something..">
                        <a class="search-btn"><i class="fas fa-search"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
            <section>
                <div class="container">
                    <div class="row p-2">
                        <a asp-controller="Search" asp-action="Product">
                            <div class="card col" style="width: 24rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Product</h5>
                                    <p class="card-text">Filter and search the product.</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </section>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        text-align: center;
        min-height: 93vh;
    }

    .search-box {
        width: 350px;
        position: relative;
        display: flex;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
    }

    .search-input {
        width: 100%;
        font-family: 'Montserrat', sans-serif;
        font-size: 16px;
        padding: 15px 45px 15px 15px;
        background-color: #eaeaeb;
        color: #6c6c6c;
        border-radius: 6px;
        border: none;
        transition: all .4s;
    }

        .search-input:focus {
            border: none;
            outline: none;
            box-shadow: 0 1px 12px #b8c6db;
            -moz-box-shadow: 0 1px 12px #b8c6db;
            -webkit-box-shadow: 0 1px 12px #b8c6db;
        }

    .search-btn {
        background-color: transparent;
        font-size: 18px;
        padding: 12px 9px;
        margin-left: -45px;
        border: none;
        color: #6c6c6c;
        transition: all .4s;
        z-index: 10;
    }

        .search-btn:hover {
            transform: scale(1.2);
            cursor: pointer;
            color: black;
        }

        .search-btn:focus {
            outline: none;
            color: black;
        }
</style>