@{
    ViewData["Title"] = "Cart summary";
}

<h3>Cart Summary</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Product Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Price</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.cart != null)
        {
            @foreach (var item in ViewBag.cart)
            {
                <tr>

                    <td>@item.Product.Id</td>
                    <td>@item.Product.ProductName</td>
                    <td><img src="@item.Product.ProductImage" width="60" /> </td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <td><a class="btn btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Product.Id">Remove</a></td>
                </tr>
            }
            <tr>
                <td align="right" colspan="6">EzBucks:</td>
                <td>
                    @ViewBag.total
                </td>
            </tr>
        }
    </tbody>

</table>
<br>


<div class="col-md-12">
    <div class="row">
        <div class="col-lg-4"><a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Clear cart</a></div>
        <div class="col-lg-4"><a class="btn btn-primary" asp-controller="Home" asp-action="Store" asp-route-id="1">Continue Shopping</a></div>
        @if (ViewBag.cart != null)
        {
            <div class="col-lg-4"><a class="btn btn-success" asp-controller="Transaction" asp-action="DeductMoney" asp-route-amount="@ViewBag.total">Pay</a></div>
        }
    </div>
</div>



